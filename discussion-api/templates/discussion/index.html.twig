{% extends 'base.html.twig' %}

{% block title %}Discussion index{% endblock %}

{% block body %}
    <h1>Discussion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Uuid</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discussion in discussions %}
            <tr>
                <td>{{ discussion.uuid }}</td>
                <td>
                    <a href="{{ path('app_discussion_show', {'uuid': discussion.uuid}) }}">show</a>
                    <a href="{{ path('app_discussion_edit', {'uuid': discussion.uuid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_discussion_new') }}">Create new</a>
{% endblock %}
